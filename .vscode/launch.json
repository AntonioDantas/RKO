    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (gdb)",
            "type": "cppdbg", // troque para "cppvsdbg" se usar MSVC
            "request": "launch",
            "program": "${workspaceFolder}/Program/runTest.exe",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "make rebuild", // chama o make antes de depurar
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "stopAtEntry": false,
            "externalConsole": false
        }
    ]
}